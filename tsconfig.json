{
  "compilerOptions": {
    "lib": [
      "es2015"
    ],
    "moduleResolution": "node",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist",
    "rootDir": "src",
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*",
    "types.d.ts"
  ],
  "resolveJsonModule": true
}
